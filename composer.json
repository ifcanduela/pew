{
    "name": "ifcanduela/pew",
    "description": "Pew-Pew-Pew framework",
    "authors": [
        {
            "name": "Igor F. Canduela",
            "email": "ifcanduela@gmail.com"
        }
    ],
    "homepage": "http://pew.ifcanduela.com",
    "license": "MIT",
    "scripts": {
        "test": "phpunit"
    },
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-pdo": "*",
        "filp/whoops": "2.*",
        "ifcanduela/abbrev": "1.*",
        "ifcanduela/db": "1.*",
        "ifcanduela/events": "1.*",
        "ifcanduela/stringy": "3.*",
        "monolog/monolog": "2.*",
        "nikic/fast-route": "1.*",
        "pimple/pimple": "3.*",
        "psr/container": "1.*",
        "symfony/cache": "5.*",
        "symfony/console": "5.*",
        "symfony/http-foundation": "5.*",
        "symfony/var-dumper": "5.*",
        "ifcanduela/router": "^1.0",
        "phpdocumentor/reflection-docblock": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "psalm/phar": "^4.3"
    },
    "autoload": {
        "files": ["src/config/functions.php"],
        "psr-4": {
            "pew\\": "./src/"
        },
        "exclude-from-classmap": ["/Tests/", "/test/", "/tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "app\\": "tests/fixtures"
        }
    }
}
