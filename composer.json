{
    "name": "ifcanduela/pew",
    "description": "Pew-Pew-Pew framework",
    "authors": [
        {
            "name": "Igor F. Canduela",
            "email": "ifcanduela@gmail.com"
        }
    ],
    "homepage": "http://pew.ifcanduela.com",
    "license": "MIT",
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix ./src --verbose --diff --dry-run",
        "fix": "php-cs-fixer fix ./src --verbose"
    },
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "doctrine/inflector": "^2.0",
        "filp/whoops": "^2.9",
        "ifcanduela/abbrev": "^1.0",
        "ifcanduela/container": "^1.0",
        "ifcanduela/db": "^1.4",
        "ifcanduela/events": "^1.0",
        "ifcanduela/router": "^1.0",
        "monolog/monolog": "^2.0",
        "nikic/fast-route": "^1.3",
        "phpdocumentor/reflection-docblock": "^5.2",
        "psr/container": "^1.0",
        "symfony/cache": "^5.2",
        "symfony/console": "^5.2",
        "symfony/http-foundation": "^5.2",
        "symfony/string": "^5.2",
        "symfony/translation-contracts": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.10",
        "symfony/var-dumper": "^5.3",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "files": ["src/config/functions.php"],
        "psr-4": {
            "pew\\": "./src/"
        },
        "exclude-from-classmap": ["/Tests/", "/test/", "/tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "app\\": "tests/fixtures"
        }
    }
}
